.home-hero {
  background-image: url('/assets/field.jpg')
  background-size: cover
  height: 80vh
  padding: (@height * .15) 0
  width: 100%

  .contain {
    align-items: center
    display: flex
    height: 100%
    justify-content: space-between
  }
}

.home-section[grey] {
  background-color: colors.grey

  h2 {
    color: colors.blue
  }
}

.home-dark-block {
  background-color: colors.neutral
}

.home-light-block {
  background-color: colors.yellow
}

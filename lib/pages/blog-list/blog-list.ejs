<!doctype html>
<html lang="en" class="nojs">
  <head>
    <%- include('../../_core/page-head.ejs', { title: 'Blog List' }) %>
    <link rel="stylesheet" href="./blog-list.css">
  </head>
  <body>
    <%- include('../../components/header/header.ejs', { active: 'blog', className: 'site-header' }) %>

    <main class="general-page">
      <section class="section">
        <div class="constrain">
          <%- include('../../components/page-heading/page-heading.ejs', {
            heading: 'LED Blog',
            placeholder: 'Search LED Blog',
            withSearch: true
          }) %>

          <div class="grid" three-col>
            <% this.doXTimes(9, () => { %>
              <%- include('../../components/blog-item/blog-item.ejs', {
                className: 'grid-item',
                date: 'May 18, 2017',
                description: 'Did you know that NASA has been testing the use of LED lights on the International Space Station (ISS)?',
                href: '/pages/blog-post/',
                image: '//placehold.it/400x220',
                title: 'Let there be (better) light!'
              }) %>
            <% }) %>
          </div>
        </div>
      </section>
    </main>

    <%- include('../../components/footer/footer.ejs') %>

    <script src="./blog-list.js"></script>
  </body>
</html>

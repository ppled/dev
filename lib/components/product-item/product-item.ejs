<% this.setDefaults(locals, {
  rating: 5
}) %>

<div class="item_product <%= className %>">
  <a class="display-block" href="<%= href %>" title="<%= title %>">
    <span class="item-title"><%= title %></span>
    <div class="item-img">
      <img src="<%= image %>" alt="<%= title %>" />
    </div>
  </a>
  <%- include('../rate-stars/rate-stars.ejs', {
    className: 'item-rating',
    stars: rating
  }) %>
  <span class="item-price"><%= price %></span>
  <form action="#">
    <div class="item-atc">
      <label class="atc-quantity">
        <span>Qty:</span>
        <input bottom-line type="number" value="1" min="1">
      </label>
      <button class="btn_light">Add to cart</button>
    </div>
  </form>
</div>

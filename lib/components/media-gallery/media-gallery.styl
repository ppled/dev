@import '../../_core/mixins.styl'
@import '../../_core/vars.styl'
@import '../list/list.styl'

breakpoint = 450px
border = {
  color: rgba(29, 34, 46, .25)
  style: solid
  width: 1px
}

.media-gallery {
  border: border.style border.color
  border-width: border.width 0 0 border.width

  .gallery-img {
    background-color: white
    border: @border
    border-width: 0 border.width border.width 0
    display: flex
    position: relative

    > a {
      align-items: center
      display: flex
      height: 100%
      justify-content: center
      overflow: hidden
      width: 100%

      &:not(:focus) {
        z-index: 1
      }

      &:focus {
        z-index: 2
      }

      > img {
        max-height: 100%
        max-width: 100%
        opacity: 1
        transition: opacity SPEEDS.default
      }

      &:hover {
        > img {
          opacity: .8
        }
      }
    }
  }

  .gallery-img[main] {
    width: 100%

    +media('>=' + breakpoint) {
      height: 300px
    }

    +media('<' + breakpoint) {
      height: 160px
    }
  }

  .gallery-thumbnails {
    display: flex
    flex-wrap: wrap
    width: 100%

    .gallery-img {
      +media('>=' + breakpoint) {
        height: 65px
        width: 20%
      }

      +media('<' + breakpoint) {
        height: 55px
        width: 25%
      }
    }
  }
}

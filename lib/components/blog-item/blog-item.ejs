<% this.setDefaults(locals, {
  className: '',
  description: false
}) %>

<div class="item_blog <%= className %>">
  <a class="display-block" href="<%= href %>">
    <span class="item-title"><%= title %></span>
    <span class="item-date"><%= date %></span>
    <img class="item-img" src="<%= image %>" alt="<%= title %>">
  </a>
  <% if (description) { %>
    <p class="item-description"><%= description %></p>
    <a class="item-link" href="<%= href %>">Read more</a>
  <% } %>
</div>

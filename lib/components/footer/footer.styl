@import '../../_core/vars.styl'
@import '../../_core/mixins.styl'
@import '../subscribe-box/subscribe-box.styl'

.site-footer {
  background-color: COLORS.neutral

  +media('>=' + BREAKPOINTS.mobile) {
    padding: 65px 0
  }

  +media('<' + BREAKPOINTS.mobile) {
    padding: 40px 0
  }

  .contain {
    display: flex
    flex-direction: column
    align-items: center
  }

  .footer-subscribe {
    max-width: 345px
  }

  .footer-hr {
    background-color: alpha(white, .25)
    border: 0
    height: 1px
    width: 160px

    +media('<=' + BREAKPOINTS.mobile) {
      margin: 30px 0
    }

    +media('>' + BREAKPOINTS.mobile) {
      margin: 40px 0
    }
  }

  .footer-info {
    color: white
    font-size: 12px

    span {
      display: block
    }

    .info-copyright {
      color: alpha(white, .6)
      margin-top: 15px
    }
  }
}

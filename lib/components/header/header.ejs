<% this.setDefaults(locals, {
  active: false,
  className: ''
}) %>

<header class="<%= className %>">
  <div class="header-body" wide>
    <div class="contain">
      <div class="header-main">
        <a class="header-logo" href="/pages/home/">
          <img src="/assets/header-logo.png" alt="Petersen Parts logo">
        </a>

        <ul class="header-nav_main list" menu>
          <li
            class="list-item"
            <% if (active === 'products') { %>active<% } %>
          ><a href="/pages/product-list/">Products</a></li>
          <li
            class="list-item"
            <% if (active === 'blog') { %>active<% } %>
          ><a href="/pages/blog-list/">Blog</a></li>
          <li
            class="list-item"
            <% if (active === 'about') { %>active<% } %>
          ><a href="/pages/about/">About</a></li>
          <li
            class="list-item"
            <% if (active === 'installation') { %>active<% } %>
          ><a href="/pages/installation/">Installation</a></li>
          <li class="list-item"><a href="#">Contact</a></li>
        </ul>
      </div>

      <ul class="header-nav_utility list" menu bold>
        <li class="list-item" badge="5"><a href="#">Shopping cart</a></li>
        <li class="list-item"><a href="#">Log in</a></li>
      </ul>
    </div>
  </div>

  <div class="header-body" condensed>
    <div class="contain">
      <%- include('../nav-toggle/nav-toggle.ejs', {
        className: 'header-nav-toggle'
      }) %>

      <a class="header-link header-logo" href="/pages/home/">
        <img src="/assets/header-logo.png" alt="Petersen Parts logo">
      </a>

      <a class="header-link header-cart" href="#" badge="5">
        <i class="material-icons">shopping_cart</i>
      </a>
    </div>
  </div>

  <div class="header-flyout" dark-bg>
    <ul class="header-nav_main list" menu-blocks>
      <li
        class="list-item"
        <% if (active === 'products') { %>active<% } %>
      ><a href="/pages/product-list/">Products</a></li>
      <li
        class="list-item"
        <% if (active === 'blog') { %>active<% } %>
      ><a href="/pages/blog-list/">Blog</a></li>
      <li
        class="list-item"
        <% if (active === 'about') { %>active<% } %>
      ><a href="/pages/about/">About</a></li>
      <li
        class="list-item"
        <% if (active === 'installation') { %>active<% } %>
      ><a href="/pages/installation/">Installation</a></li>
      <li class="list-item"><a href="#">Contact</a></li>
      <li class="list-item" bold><a href="#">Log in</a></li>
    </ul>
  </div>
</header>

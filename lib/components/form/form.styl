@import '../../_core/vars.styl'
@import '../../_core/mixins.styl'

form {

  +text-inputs() {
    background: transparent
    border: 0
    border-color: colors.neutral
    border-style: solid
    display: block
    max-width: 100%
    width: 100%

    +placeholder() {
      color: colors.neutral_40
    }

    &:not([bare]):not([bottom-line]) {
      border-width: 1px
      padding: 10px
    }

    &[bottom-line] {
      border-bottom-width: 1px
    }
  }

  [small] &,
  &[small]
  [small] {
    +text-inputs() {
      &:not([bare]):not([bottom-line]) {
        padding: 6px
      }
    }
  }

  .labeled-input {
    display: flex
    flex-direction: column

    &:not(:last-child) {
      margin-bottom: 15px
    }

    > span {
      font-size: 10px
      margin-bottom: 10px
      text-transform: uppercase
    }
  }
}

[dark-bg] form {
  color: white

  +text-inputs() {
    border-color: white

    +placeholder() {
      color: alpha(white, .4)
    }
  }
}

<% this.setDefaults(locals, {
  withSearch: false
}) %>

<% if (withSearch) { %>
  <div class="page-heading" with-search>
    <h1><%= heading %></h1>
    <form class="heading-search" action="#">
      <label class="sr-only" for="search-input"><%= placeholder %></label>
      <input bare id="search-input" class="search-input" type="search" placeholder="<%= placeholder %>">
      <button class="search-btn btn_bare"><i class="material-icons">search</i></button>
    </form>
  </div>
<% } else { %>
  <div class="page-heading">
    <h1><%= heading %></h1>
  </div>
<% } %>

.home-section {

  +media('>=' + breakpoints.mobile) {
    padding-bottom: 65px
    padding-top: @padding-bottom
  }

  +media('<' + breakpoints.mobile) {
    padding-bottom: 40px
    padding-top: @padding-bottom
  }

  h2 {
    font-size: 25px
    margin-bottom: 30px
    text-transform: none
  }

  &[off-color] {
    background-color: colors.grey

    h2 {
      color: colors.blue
    }
  }
}

.home-info-blocks {

  .home-dark-block {
    background-color: colors.neutral
  }

  .home-light-block {
    background-color: colors.yellow
  }
}

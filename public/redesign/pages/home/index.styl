.home-section {

  +media('>=' + breakpoints.mobile) {
    padding-bottom: 65px
    padding-top: @padding-bottom
  }

  +media('<' + breakpoints.mobile) {
    padding-bottom: 40px
    padding-top: @padding-bottom
  }

  h2 {
    font-size: 25px
    margin-bottom: 30px
    text-transform: none
  }

  &[off-color] {
    background-color: colors.grey

    h2 {
      color: colors.blue
    }
  }
}

.home-section-grid {
  display: flex
  flex-wrap: wrap
  margin-bottom: -30px

  .grid-item {
    margin-bottom: 30px
  }

  // 3 columns
  +media('>=850px') {
    justify-content: space-between

    .grid-item {
      width: 32%
    }
  }

  // 2 columns
  +media('>=550px', '<850px') {
    justify-content: space-between

    .grid-item {
      max-width: 400px
      width: 48%
    }
  }

  // 1 column
  +media('<550px') {
    align-items: center
    flex-direction: column

    .grid-item {
      max-width: 400px
      width: 100%
    }
  }
}

.home-info-blocks {

  .home-dark-block {
    background-color: colors.neutral
  }

  .home-light-block {
    background-color: colors.yellow
  }
}

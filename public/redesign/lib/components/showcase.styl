.showcase {
  padding = 30px
  margin-bottom: 10px
  padding-bottom: padding
  padding-top: padding

  > h4 {
    margin-bottom: 15px

    > i.vr {
      display: inline-block
      font-style: normal
      font-weight: 400
      margin: 0 10px
    }
  }

  &:not([full-width]) {
    padding-left: padding
    padding-right: padding
  }

  &[full-width] {
    > h4 {
      padding-left: padding
      padding-right: padding
    }
  }

  &[dark-bg] {
    background-color: #1d222e

    > h4 {
      color: white
    }
  }
}

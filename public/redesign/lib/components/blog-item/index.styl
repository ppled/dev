@require '../../core/index.styl'
@require '../../core/vars.styl'

.item_blog {

  .item-title,
  .item-date,
  .item-img,
  .item-description,
  .item-link {
    display: block
  }

  .item-title {
    font-size: 21px
    font-weight: 300
    margin-bottom: 5px
  }

  .item-date {
    font-size: 10px
    margin-bottom: 15px
    text-transform: uppercase
  }

  .item-img {
    margin-bottom: 15px
  }

  .item-description,
  .item-link {
    font-size 15px
  }

  .item-description {
    line-height: 1.5
    margin-bottom: 5px
  }

  .item-link {
    color: colors.blue
  }
}

@require '../../core/index.styl'
@require '../../core/vars.styl'

.list {
  list-style-type: none
}

// dark variant
[dark-bg] .list {
  > .list-item {
    color: white
  }
}

// bold variants
.list {
  &[bold] > .list-item,
  > .list-item[bold] {
    font-weight: 700
  }
}

/*
 * default
 */
.list:not([bare]):not([menu]):not([menu-blocks]) {
  > li {
    padding-left: 1em
    position: relative

    &:before {
      content: 'â€¢'
      left: 0
      position: absolute
    }
  }
}

/*
 * menu
 */
.list[menu] {
  display: flex

  > .list-item {
    font-size: 10px
    text-transform: uppercase

    > a {
      display: block
      padding: 5px 5px
      position: relative

      // underline
      &:after {
        background-color: colors.neutral_80
        bottom: 0
        content: ''
        display: none
        height: 1px
        left: 5px
        position: absolute
        right: 5px
      }

      &:hover {
        text-decoration: none
      }
    }

    &[badge] {
      position: relative

      &::after {
        background-color: colors.yellow
        border-radius: 6px
        content: attr(badge)
        font-size: 8px
        font-weight: 700
        padding: 2px 4px
        pointer-events: none
        position: absolute
        right: 0
        top: 0
        transform: translate(50%, -40%)
      }
    }

    &:hover,
    &.list-item[active] {
      > a:after {
        display: block
      }
    }

    &:not(:first-child) {
      margin-left: 15px
    }

    &:first-child {
      > a {
        padding-left: 0

        &:after {
          left: 0
        }
      }
    }

    &:last-child {
      > a {
        padding-right: 0

        &:after {
          right: 0
        }
      }
    }
  }
}

/*
 * menu-blocks
 */
.list[menu-blocks] {

  > .list-item {
    font-size: 10px
    text-transform: uppercase

    &:not(:last-child) {
      border-bottom: 1px solid colors.neutral
    }

    > a {
      display: block
      padding: 15px
      text-decoration: none
    }
  }
}

[dark-bg] .list[menu-blocks] {
  > .list-item:not(:last-child) {
    border-bottom-color: alpha(white, .25)
  }
}

@require '../../core/index.styl'
@require '../../core/vars.styl'

.list_menu {
  display: flex
  list-style-type: none

  > .list-item {
    font-size: 10px
    text-transform: uppercase

    > a {
      display: block
      padding: 5px 5px
      position: relative

      // underline
      &:after {
        content: ''
        display: none
        background-color: colors.neutral_80
        height: 1px
        position: absolute
        bottom: 0
        left: 5px
        right: 5px
      }

      &:hover {
        text-decoration: none
      }
    }

    &[data-badge] {
      position: relative

      &::after {
        content: attr(data-badge)
        background-color: colors.yellow
        padding: 2px 4px
        font-weight: 700
        font-size: 8px
        position: absolute
        top: 0
        right: 0
        pointer-events: none
        border-radius: 6px
        transform: translate(50%, -40%)
      }
    }

    &:hover,
    &.list-item--active {

      > a:after {
        display: block
      }
    }

    &:not(:first-child) {
      margin-left: 15px
    }

    &:first-child {

      > a {
        padding-left: 0

        &:after {
          left: 0
        }
      }
    }

    &:last-child {

      > a {
        padding-right: 0

        &:after {
          right: 0
        }
      }
    }
  }
}

.list_menu_bold {
  @extend .list_menu

  > .list-item {
    font-weight: 700
  }
}

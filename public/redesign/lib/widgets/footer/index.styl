@require '../../core/index.styl'
@require '../../core/vars.styl'
@require '../../core/mixins.styl'
@require '../../components/subscribe-box/index.styl'

.site-footer {
  @extend $light-text
  background-color: colors.neutral
  color: white
  padding: 65px 0

  .constrain {
    display: flex
    flex-direction: column
    align-items: center
  }

  .footer-subscribe {
    max-width: 345px
  }

  .footer-hr {
    background-color: alpha(white, .25)
    border: 0
    height: 1px
    margin: 40px 0
    width: 160px
  }

  .footer-info {
    font-size: 12px

    span {
      display: block
    }

    .info-copyright {
      color: alpha(white, .6)
      margin-top: 15px
    }
  }
}

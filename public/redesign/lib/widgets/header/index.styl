@require '../../core/index.styl'
@require '../../core/vars.styl'
@require '../../core/mixins.styl'
@require '../../components/list/index.styl'

device-breakpoint = 820px
logo = {
  height: 30px
  width: 227px
}

wide() {
  +media('>=' + device-breakpoint) {
    {block}
  }
}

condensed() {
  +media('<' + device-breakpoint) {
    {block}
  }
}

.site-header {
  box-shadow: 0 3px 4px 0 rgba(0, 0, 0, .5)
  left: 0
  position: fixed
  top: 0
  width: 100%

  +condensed() {
    padding-bottom: 10px
    padding-top: @padding-bottom

    .header_wide {
      display: none
    }
  }

  +wide() {
    padding-bottom: 20px
    padding-top: @padding-bottom

    .header_condensed {
      display: none
    }
  }

  .header_wide,
  .header_condensed {

    > .constrain {
      display: flex
      justify-content: space-between
    }
  }
}

.header_wide {

  .header-logo {
    background-image: url(ASSET_PATH + '/header-logo.png')
    display: block
    height: logo.height
    width: logo.width
    background-size: @width @height
  }

  .header-main {
    display: flex

    .header-logo {
      margin-right: 40px
    }
  }

  .header-nav_main,
  .header-nav_utility {
    align-items: center
    height: logo.height
  }
}

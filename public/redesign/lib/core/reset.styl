@require '../core/vars.styl'

*,
:before,
:after {
  line-height: inherit
  margin: 0
  padding: 0
  font-size: inherit
  color: inherit
  box-sizing: inherit
}

html {
  box-sizing: border-box
}

body {
  background-color: #fff
  min-width: 300px
  line-height: 1
  font-family: 'Libre Franklin', sans-serif
  font-size: 16px
  color: colors.neutral_80
}

a {
  text-decoration: none

  &:hover {
    text-decoration: underline
  }
}

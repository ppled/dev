h1 {
  font-size: 38px
  font-weight: 700
}

h2 {
  font-size: 28px
  font-weight: 300
  text-transform: uppercase
}

h3 {
  font-size: 21px
  font-weight: 300
}

h4 {
  font-size: 16px
  font-weight: 700
}

h5 {
  font-size: 10px
  font-weight: 400
  text-transform: uppercase
}

small {
  font-size: 13px
}

.text-block {
  margin-bottom: 25px

  h1 {
    margin-bottom: 25px
  }

  h2,
  h3 {
    margin-bottom: 15px
  }

  p {
    line-height: 1.5
    margin-bottom: 10px
  }

  .quote {
    color: colors.neutral_40
    font-size: 13px
  }
}

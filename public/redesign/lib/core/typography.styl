h1,
h2,
h3,
h4,
h5 {
  color: colors.neutral
}

h1 {
  font-weight: 700
  font-size: 38px
}

h2 {
  font-weight: 300
  font-size: 28px
  text-transform: uppercase
}

h3 {
  font-weight: 300
  font-size: 21px
}

h4 {
  font-weight: 700
  font-size: 16px
}

h5 {
  font-weight: 400
  font-size: 10px
  text-transform: uppercase
}

small {
  font-size: 13px
}

.text-block {
  margin-bottom: 25px

  h1 {
    margin-bottom: 25px
  }

  h2,
  h3 {
    margin-bottom: 15px
  }

  p {
    line-height: 1.5
    margin-bottom: 10px
  }

  .quote {
    font-size: 13px
    color: colors.neutral_40
  }
}

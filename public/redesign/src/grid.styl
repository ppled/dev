columns = 12
names = { '2': 'two', '3': 'three', '4': 'four', '5': 'five', '6': 'six', '7': 'seven', '8': 'eight', '9': 'nine', '10': 'ten', '11': 'eleven', '12': 'twelve' }

.grid {
  display: flex

  .column {
    flex: 1

    // column-two - column-twelve
    for number in (2...(columns + 1)) {
      name = names['' + number]

      &-{name} {
        width: (100% * (number / columns))
        max-width: @width
      }
    }
  }
}

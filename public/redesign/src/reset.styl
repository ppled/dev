*,
:before,
:after {
  margin: 0
  padding: 0
  color: inherit
  box-sizing: inherit
}

html {
  box-sizing: border-box
}

body {
  background-color: colors.neutral_05
  font-family: 'Libre Franklin', sans-serif
  font-size: 16px
  color: colors.neutral_80
}

h1 {
  font-weight: 700
  font-size: 38px
}

h2 {
  font-weight: 300
  font-size: 28px
  text-transform: uppercase
}

h3 {
  font-weight: 300
  font-size: 21px
}

h4 {
  font-weight: 700
  font-size: 16px
}

h5 {
  font-weight: 400
  font-size: 10px
  text-transform: uppercase
}

small {
  font-size: 13px
}
